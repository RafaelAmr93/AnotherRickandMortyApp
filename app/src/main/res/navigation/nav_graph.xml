<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/overviewFragment">

    <fragment
        android:id="@+id/overviewFragment"
        android:name="rafaelamaro.anotherrickandmortyapp.ui.overview.MainOverviewFragment"
        android:label="@string/overview_fragment"
        tools:layout="@layout/fragment_main_overview">
        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/characterDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="rafaelamaro.anotherrickandmortyapp.ui.overview.CharacterDetailFragment"
        android:label="@string/characterDetail"
        tools:layout="@layout/fragment_character_detail">

        <argument
            android:name="characterDetail"
            app:argType="rafaelamaro.anotherrickandmortyapp.network.data.CharacterData"
            app:nullable="true" />
        <action
            android:id="@+id/action_characterDetailFragment_to_nav_graph"
            app:popUpTo="@id/nav_graph" />

    </fragment>

</navigation>